{
  "name": "schema",
  "version": "0.1.0",
  "scripts": {
    "cli:tsp": "tsp",
    "cli:tsc": "tsc",
    "cli:spectral": "spectral",
    "cli:ts-node": "ts-node",
    "cli:scaffdog": "scaffdog",
    "gen": "scaffdog generate",
    "fmt": "tsp format \"**/*.tsp\"",
    "fmt:check": "tsp format --check \"**/*.tsp\"",
    "build": "tsp compile ./src",
    "sync:ui": "ts-node ./scripts/sync/main.ts",
    "lint:openapi": "spectral lint ./tsp-output/@typespec/openapi3/openapi.yaml"
  },
  "peerDependencies": {
    "@typespec/compiler": "latest",
    "@typespec/http": "latest",
    "@typespec/openapi3": "latest",
    "@typespec/rest": "latest"
  },
  "devDependencies": {
    "@stoplight/spectral-cli": "^6.13.1",
    "@tsconfig/recommended": "^1.0.7",
    "@types/node": "^22.7.9",
    "@typespec/compiler": "^0.61.2",
    "@typespec/http": "latest",
    "@typespec/openapi3": "latest",
    "@typespec/rest": "latest",
    "scaffdog": "^4.1.0",
    "tslib": "^2.8.0"
  },
  "private": true,
  "dependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
